<div class="row">
  <div class="col s12">
    <%= link_to 'cancel', invest_path(@invest), class: 'waves-effect waves-light btn btn-dark' %>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-stacked">
        <div class="card-content overflow-auto">
          <span class="card-title pb3">history</span>
          <% @invest.statuses.try(:each) do |i| %>
            <div class="clearfix">
              <p class="pb4 fl"><%= i.title %>:</p>
              <p class="pb4 fl ml-4"><%= i.detail %></p>
              <p class="pb4 fr ml-4"><%= i.created_at.strftime('%H:%M - %b %e %Y') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-stacked">
        <div class="card-content">
          <span class="card-title">new</span>

          <%= simple_form_for @status, url: invest_statuses_path do |f| %>
              <%= f.input :title, input_html: { class: 'validate' }, label: 'title' %>
              <%= f.input :detail, input_html: { class: 'materialize-textarea validate textarea-main' }, label: 'detail' %>

              <%= f.button :submit, class: 'btn-dark' %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
