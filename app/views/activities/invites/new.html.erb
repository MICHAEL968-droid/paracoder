<div class="row">
  <div class="col s12">
    <%= link_to 'cancel', team_path(@team), class: 'waves-effect waves-light btn btn-dark' %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-stacked">
        <div class="card-content overflow-auto">
          <%= simple_form_for @invite, url: team_invites_path do |f| %>
              <%= f.input :member_email, input_html: { class: 'validate' }, label: 'email' %>

              <%= f.button :submit, value: 'send invite', class: 'btn-dark' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-stacked">
        <div class="card-content overflow-auto">
          <h5 class="float-left p-1 mx-1">pending invites</h5>
          <% @team.activity_invites.pending.try(:each) do |invitee| %>
              <div class="team-user-list">
                <h6>
                  <%= link_to invitee.user.username, user_path(invitee.user) %>
                  <%= link_to '(revoke)', team_invite_path(@team, invitee),
                              data: {confirm: 'Are you sure you want to revoke this invite?'},
                              method: :delete %>
                </h6>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-stacked">
        <div class="card-content overflow-auto">
          <h5 class="float-left p-1 mx-1">members of team</h5>
          <% @team.members.each do |member| %>
            <%= link_to user_path(member) do %>
              <div class="team-user-list">
                <h6><%= member.username %></h6>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

