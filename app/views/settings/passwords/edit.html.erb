<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-stacked">
        <div class="card-content bg-dark">

          <div class="row no-margin">

            <div class="col s3">
              <ul class="list-reset settings-ul">
                <%= link_to edit_settings_account_path, class: 'no-underline' do %>
                  <li class="pa2 white-text cursor-pointer">account</li>
                <% end %>
                <%= link_to edit_settings_profile_path, class: 'no-underline' do %>
                  <li class="pa2 white-text cursor-pointer">profile</li>
                <% end %>
                <li class="pa2 white-text">password</li>
              </ul>
            </div>

            <div class="col s9 bg-white right-inner-card">
              <h3 class="mt0 mb4"><%= t(".title") %></h3>
              <%= simple_form_for @user, url: settings_password_url, method: :patch do |f| %>
                <%= f.input :current_password, input_html: { class: 'validate' }, label: 'current password' %>
                <%= f.input :new_password, input_html: { class: 'w-full-input' }, label: 'new password' %>
                <%= f.button :submit, value: 'update password', class: 'btn-dark' %>
              <% end %>
            </div>

          </div>

        </div>

      </div>
    </div>
  </div>
</div>
