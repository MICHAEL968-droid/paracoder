<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-stacked">
        <div class="card-content">
          <span class="card-title"><%= t(".title") %></span>

            <%= simple_form_for @invest do |f| %>
                <%= f.input :title, input_html: { class: 'validate ml2' }, label: 'title' %>
                <%= f.input :body, input_html: { class: 'materialize-textarea validate textarea-main' }, label: 'description' %>

              <%= f.simple_fields_for :links, OpenStruct.new(@invest.links) do |link| %>
                  <%= link.input :homepage, input_html: { class: 'validate' }, label: 'homepage' %>
                  <%= link.input :github, input_html: { class: 'validate' }, label: 'github' %>
              <% end %>

                <%= f.button :submit, class: 'btn-dark' %>
            <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
