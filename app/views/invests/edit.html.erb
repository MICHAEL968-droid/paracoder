<div class="row">
  <div class="col s12">
    <%= link_to 'cancel', invest_path(@invest), class: 'waves-effect waves-light btn btn-dark' %>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-stacked">
        <div class="card-content">
          <span class="card-title pb3"><%= t(".title") %></span>

          <%= simple_form_for @invest do |f| %>
            <%= f.input :title, input_html: { class: 'validate' } %>
            <%= f.input :body, input_html: { class: 'materialize-textarea validate textarea-main' } %>

            <%= f.simple_fields_for :links, OpenStruct.new(@invest.links) do |link| %>
                <%= link.input :homepage, input_html: { class: 'validate' } %>
                <%= link.input :github, input_html: { class: 'validate' } %>
            <% end %>

              <%= f.button :submit, class: 'btn-dark' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
